{
  "name": "Cloud Self-Healing DevSecOps",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-slim",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "zricethezav.gitleaks-vscode",
        "bridgecrew.checkov",
        "aquasecurity.trivy-vscode",
        "github.vscode-codeql",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r app/requirements.txt && python -m pip install bandit",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "forwardPorts": [],
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "bandit.runOnSave": true,
    "editor.formatOnSave": true,
    "terminal.integrated.defaultProfile.linux": "bash"
  }
}
